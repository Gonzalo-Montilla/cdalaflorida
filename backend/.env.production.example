# ==========================================
# CDA PIENDAMÓ - CONFIGURACIÓN DE PRODUCCIÓN
# ==========================================
# IMPORTANTE: Copiar este archivo como .env.production y completar con valores reales
# NO compartir este archivo con credenciales reales en repositorios públicos

# ====================
# BASE DE DATOS
# ====================
DATABASE_URL=postgresql://usuario_db:password_seguro@localhost:5432/cda_La Florida_prod

# ====================
# SEGURIDAD JWT
# ====================
# CRÍTICO: Generar una SECRET_KEY única con: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=CAMBIAR_POR_KEY_SEGURA_GENERADA
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ====================
# APLICACIÓN
# ====================
APP_NAME=CDA Piendamó
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=False

# ====================
# CORS (URLs del frontend)
# ====================
# IMPORTANTE: En producción, especificar solo el dominio real, NO usar "*"
BACKEND_CORS_ORIGINS=["https://tu-dominio.com","https://www.tu-dominio.com"]

# ====================
# URLs SISTEMAS EXTERNOS
# ====================
RUNT_URL=https://b2crunt2prd.b2clogin.com/runtprologin.runt.gov.co/b2c_1a_singin/oauth2/v2.0/authorize?client_id=4e0d509e-3bb5-44b9-b712-53e221b97393&scope=https%3A%2F%2FB2Crunt2prd.onmicrosoft.com%2FRNFTransversalMS%2Faccess.all%20openid%20profile%20offline_access&redirect_uri=https%3A%2F%2Fruntpro.runt.gov.co%2F
SICOV_URL=https://sicovindra.com:9093/
INDRA_URL=https://indra.paynet.com.co:14443/Login.aspx?ReturnUrl=%2fInformacionSeguridad.aspx

# ====================
# SMTP (Recuperación de contraseña)
# ====================
# Para Gmail: Usar "Contraseña de aplicación" (no la contraseña normal)
# Configurar en: https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=cdaLa Florida@gmail.com
SMTP_PASSWORD=CAMBIAR_POR_PASSWORD_APLICACION_GMAIL
FRONTEND_URL=https://tu-dominio.com

# ====================
# LOCALIZACIÓN
# ====================
TIMEZONE=America/Bogota
LOCALE=es_CO
